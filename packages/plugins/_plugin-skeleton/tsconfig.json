{
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "files": ["./src/public-api.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "composite": true,
    "declaration": true,
    "target": "esnext",
    "moduleResolution": "bundler",
    "removeComments": false,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "paths": {}
  },
  "references": [{ "path": "../core" }]
}
